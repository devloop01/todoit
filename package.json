{
	"type": "module",
	"name": "todoit",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"db:start": "supabase start",
		"db:stop": "supabase stop --backup",
		"db:status": "supabase status",
		"db:generate": "drizzle-kit generate:pg",
		"db:push": "tsx ./src/lib/server/db/migrate.ts",
		"db:migrate": "pnpm db:generate && pnpm db:push",
		"db:studio": "drizzle-kit studio --port 3000 --verbose"
	},
	"dependencies": {
		"@fontsource-variable/inter": "^5.0.8",
		"@fontsource-variable/open-sans": "^5.0.13",
		"@lucia-auth/adapter-postgresql": "^2.0.1",
		"class-variance-authority": "^0.7.0",
		"clsx": "^2.0.0",
		"drizzle-orm": "^0.28.6",
		"lucia": "^2.6.0",
		"lucide-svelte": "^0.277.0",
		"nanoid": "^5.0.1",
		"pg": "^8.11.3",
		"postgres": "^3.3.5",
		"resend": "^1.0.0",
		"svelte-email": "^0.0.4",
		"tailwind-merge": "^1.14.0",
		"tailwindcss-animate": "^1.0.7"
	},
	"devDependencies": {
		"@melt-ui/pp": "^0.1.2",
		"@melt-ui/svelte": "^0.49.1",
		"@sveltejs/adapter-vercel": "^3.0.3",
		"@sveltejs/kit": "^1.25.0",
		"@typescript-eslint/eslint-plugin": "^6.7.0",
		"@typescript-eslint/parser": "^6.7.0",
		"autoprefixer": "^10.4.15",
		"dotenv": "^16.3.1",
		"drizzle-kit": "^0.19.13",
		"eslint": "^8.49.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-svelte": "^2.33.1",
		"postcss": "^8.4.29",
		"prettier": "^3.0.3",
		"prettier-plugin-svelte": "^3.0.3",
		"prettier-plugin-tailwindcss": "^0.5.4",
		"supabase": "^1.93.0",
		"svelte": "^4.2.0",
		"svelte-check": "^3.5.1",
		"svelte-sequential-preprocessor": "^2.0.1",
		"sveltekit-flash-message": "^2.2.1",
		"sveltekit-superforms": "^1.6.1",
		"tailwindcss": "^3.3.3",
		"tslib": "^2.6.2",
		"tsx": "^3.12.10",
		"typescript": "^5.2.2",
		"vite": "^4.4.9",
		"zod": "^3.22.2"
	}
}
